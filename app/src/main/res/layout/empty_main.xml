<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="620dp">


        <ImageView
            android:id="@+id/menu_no_stickers"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:contentDescription="menu_no_stickers"
            android:src="@drawable/menu_no_stickers" />


        <RelativeLayout
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/a_new_sticker"
                android:layout_width="74dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="69.5dp"
                android:gravity="center"
                android:text="@string/a_new_sticker_string"
                android:textColor="@color/a_new_sticker_color"
                android:textSize="12sp" />

            <View
                android:id="@+id/button_add"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_add_shape" />

            <ImageView
                android:id="@+id/plus2"
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="21dp"
                android:contentDescription="plus2"
                android:src="@drawable/plus2" />

            <ImageView
                android:id="@+id/plus1"
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24.5dp"
                android:contentDescription="plus1"
                android:src="@drawable/plus1" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/button_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="55dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="home"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/door"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:contentDescription="door"
                android:src="@drawable/door" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="49dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/text_home_string"
                android:textColor="@color/a_new_sticker_color"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="55dp">

            <ImageView
                android:id="@+id/settings_vector"
                android:layout_width="18.04dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:contentDescription="settings_vector"
                android:src="@drawable/settings_vector" />

            <ImageView
                android:id="@+id/middle_of_settings"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:contentDescription="middle_of_settings"
                android:src="@drawable/middle_of_settings" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="49dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/settings_string"
                android:textColor="@color/a_new_sticker_color"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/add_stickers_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_no_stickers"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:gravity="center"
        android:text="@string/text_no_stickers_string"
        android:textColor="@color/use_the_information_on_your_device_to_log_in_to_your_account_color"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="500dp"
        android:contentDescription="arrow_down"
        android:src="@drawable/arrow_down" />

    <ImageView
        android:id="@+id/image_no_stickers"
        android:layout_width="199dp"
        android:layout_height="194dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:contentDescription="image_no_stickers"
        android:src="@drawable/image_no_stickers" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="50dp"
        android:contentDescription="logo"
        android:src="@drawable/logo" />
</RelativeLayout>